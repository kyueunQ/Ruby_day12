<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr>
<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning text-white' %> 
<%= link_to 'Back', posts_path, class: 'btn btn-info' %>
<%= link_to 'Delete', post_path(@post), method: 'DELETE', class: 'btn btn-danger' %>

<!-- 댓글 입력 폼 조립 -->
<%= render 'comments/form', post: @post %>

<!-- 댓글 리스트-->

   <br>


<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">내용</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td><%= comment.content %></td>
      <td><%=link_to "삭제", "/comments/#{comment.id}", method: "delete" %></td>
    </tr>
    <% end %>
  </tbody>
</table>